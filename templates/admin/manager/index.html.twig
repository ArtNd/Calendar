{% extends 'base.html.twig' %}
{% block title 'Gérer les responsables' %}

{% block body %}
    <style>
        body{
            background-image: url("../../Img/calendar 2.jpg");
        }
        body, tbody, thead{
            color: white;
        }
        .jumbotron {
            margin-top: 10px;
            background-image: none;
            background: rgba(0,0,0, 0.7);
            border:1px solid rgba(0,0,0,0.1);
            background-repeat: no-repeat;
            background-attachment: fixed;
            position: center;
        }
    </style>
<body>
    <div class="jumbotron">
        <h1 class="display-3 text-center">Administration des responsables</h1>
    </div>
    <div class="jumbotron">
        <div class="container mt-4">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>Responsables</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Rôles</th>
                    <th>Action</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.name }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.rolesString }}</td>
                        <td><a href="{{ path('admin.manager.edit', {id: user.id}) }}" class="btn btn-secondary">Éditer</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</body>
{% endblock %}