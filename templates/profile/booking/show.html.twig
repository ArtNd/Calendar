{% extends 'profile/booking/base_booking.html.twig' %}

{% block title %}Réservation{% endblock %}

{% block body %}
    <style>
        body, tbody, thead{
            color: white;
        }
    </style>
<body>
    <div class="jumbotron transparence">
        <div class="container">
            <h1>Booking</h1>
            <table class="table mt-4 table-hover">
                <thead>
                    <tr>
                        <th>Titre :</th>
                        <td>{{ booking.title }}</td>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>Début :</th>
                        <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Fin :</th>
                        <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Salle :</th>
                        <td>{{ booking.room.title }}</td>
                    </tr>
                    <tr>
                        <th>Capacité :</th>
                        <td>{{ booking.room.capacity }}</td>
                    </tr>
                    <tr>
                        <th>Élève :</th>
                        <td>{{ booking.user.name }} {{ booking.user.lastName }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="text-right">
                <a href="{{ path('booking.index') }}" class="btn btn-secondary">Retour</a>
                {% if app.user.id == booking.user.id %}
                    {{ include('/profile/booking/_delete_form.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
</body>
{% endblock %}
